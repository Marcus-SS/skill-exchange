<%= content_for(:navbar_class, "navbar-home") %>

<div class="banner-purple">
  <div class="text-center">
    <%= image_tag 'SkillExchange.png', alt: "logo", class: "logo" %>
    <h1>Skill Exchange</h1>
    <p>Login/Sign up to join our community</p>
  </div>
  <div>
    <h2>Log in</h2>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.submit 'Log In', class: "button-primary" %>
      </div>
    <% end %>

      <%= link_to "Forgot your password?", new_password_path(resource_name), class: "secondary-action" %>
      <%= link_to "Sign Up",  new_user_registration_path, class: "secondary-action" %>
  </div>
  </div>
</div>
