<% chatrooms.each do |chatroom| %>
  <div class="chatroom-container mt-0">
    <div class="chatroom-card <%= 'active' if chatroom.id == params[:id].to_i %>">
      <%= link_to chatroom_path(chatroom) do %>
        <div class="chatroom-details">
          <%= cl_image_tag chatroom.match.other_user(current_user).photo.key, class: "avatar" %>
          <h6><%= chatroom.match.other_user(current_user).name.capitalize %></h6>
        </div>
        <br>
        <p><span class="teach-pill"><%= chatroom.match.teach_skill_1.skill.name %></span> â†”  <span class="learn-pill"><%= chatroom.match.teach_skill_2.skill.name %></span></p>
        <% if chatroom.last_message_time.present? %>
          <p class="last-message">Last message: <%= chatroom.last_message_time.strftime("%d %b %Y %H:%M") %></p>
        <% else %>
          <p class="last-message">No new messages</p>
        <% end %>
      <% end %>
    </div>
  </div>
<% end %>
